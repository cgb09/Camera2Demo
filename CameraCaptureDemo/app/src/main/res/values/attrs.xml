<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="integer" />
        <attr name="border_outside_color" format="integer|reference" />
        <attr name="border_inside_color" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" format="dimension" />
        <attr name="type">
            <enum name="circle" value="0" />
            <enum name="round" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TwoStateSwitch">
        <attr name="imageOn" format="reference" />
        <attr name="imageOff" format="reference" />
    </declare-styleable>
</resources>